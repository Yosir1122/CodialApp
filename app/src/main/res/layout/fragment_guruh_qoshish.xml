<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.guruhlar.GuruhQoshishFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:padding="10sp"
        android:background="#FFB800">
        <ImageView
            android:id="@+id/chiqish"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:src="@drawable/qaytish"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yangi guruh qo'shish"
            android:layout_toEndOf="@id/chiqish"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:layout_marginStart="10sp"/>

    </RelativeLayout>
    <LinearLayout
        android:padding="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_marginBottom="10sp"
            android:id="@+id/name_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Guruh nomi"
            android:background="#E2DFDF"
            android:padding="10sp"/>
        <Spinner
            android:id="@+id/mentor"
            android:layout_marginBottom="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E2DFDF"/>
        <Spinner
            android:id="@+id/vaqti"
            android:layout_marginBottom="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E2DFDF"/>
        <Spinner
            android:id="@+id/kunlari"
            android:layout_marginBottom="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E2DFDF"/>
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFB800"
        android:text="Save"
        android:textSize="13sp"
        android:layout_marginEnd="10sp"
        android:layout_gravity="end|bottom"
        app:cornerRadius="10sp"/>


</LinearLayout>